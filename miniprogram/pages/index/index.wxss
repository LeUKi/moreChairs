/* pages/index/index.wxss */
@import '/miniprogram_npm/wux-weapp/styles/index.wxss';

.to-room {
  width: 690rpx;
  height: 100rpx;
  margin-top: 300rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  /* background-color: #fff; */
  border-radius: 35rpx;
  overflow: hidden;
  border: 1rpx solid #ccc;
  /* box-shadow: 0px 5px 19px -6px #696969; */
}

.to-room-side {
  width: 50%;
  height: 100%;
  /* background-color: maroon; */
}

.to-room-side-icon {
  height: 70rpx;
  width: 70rpx;
}

.to-room-center {
  border-right: 1rpx solid #ccc;
  height: 50%;
}

.room-card {
  background-color: #fff;
  width: 690rpx;
  height: 235rpx;
  margin-bottom: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 35rpx;
  overflow: hidden;
  box-shadow: 0px 5px 19px -6px #696969;
}

.room-card-body {
  width: 690rpx;
  height: 235rpx;
}

.room-id {
  background-color: #f1b5aa;
  width: 75rpx;
  height: 100%;
}

.room-id-body {
  margin-top: 10rpx;
  margin-left: 10rpx;
  transform: rotate(90deg);
  font-size: 36rpx;
  letter-spacing: 8rpx;
  font-weight: 400;
  color: #65322c;
  /* font-family:Unnamed; */
}

.room-info {
  height: 235rpx;
  width: 465rpx;
  /* background-color: khaki; */
  padding-left: 30rpx;
}

.room-info-name {
  /* background-color: lightcoral; */
  height: 45%;
  align-items: flex-end;
}

.room-info-name-body {
  /* background-color: lightcoral; */
  border-bottom: 3rpx solid #65322c;
  margin-bottom: 10rpx;
}

.room-info-name-body-text {
  max-width: 450rpx;
  font-size: 50rpx;
  margin-bottom: 8rpx;
  color: #65322c;
}

.room-info-time {
  /* background-color: lightgreen; */
  height: 25%;

}

.room-info-time-body-icon {
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
}

.room-info-time-body-text {
  max-width: 300rpx;
  font-size: 40rpx;
}

.room-info-chairs {
  /* background-color: lightyellow; */
  height: 30%;
}

.room-info-chairs-body {}

.room-info-chairs-icons {
  height: 35rpx;
  width: 35rpx;
}

.room-info-chairs-text {
  font-size: 36rpx;
  margin-left: 20rpx;
}

.room-icon {
  height: 235rpx;
  width: 150rpx;
  /* background-color: rgb(39, 158, 122); */
}

.room-icon-body {
  width: 100%;
  height: 100%;
}

.room-icon-img {
  width: 100rpx;
}